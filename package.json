{
  "name": "excalibur-sandbox",
  "version": "1.0.0",
  "private": true,
  "description": "A Boilerplate for Excalibur with webpack",
  "main": "index.js",
  "scripts": {
    "test": "npm run build:prod && ex-test -d ./dist -t ./test/test.js",
    "webpack": "webpack",
    "dev": "webpack serve --config webpack.development.js",
    "start": "npm run dev",
    "build:dev": "webpack --config webpack.development.js",
    "build:prod": "webpack --config webpack.production.js",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore --max-warnings 0 src/ test/",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "yarn run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist"
  ],
  "author": "Excalibur.js Team",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "clean-webpack-plugin": "3.0.0",
    "commitizen": "^4.3.0",
    "compression-webpack-plugin": "7.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "5.5.3",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "source-map-loader": "2.0.2",
    "terser-webpack-plugin": "5.3.9",
    "ts-loader": "9.4.4",
    "typescript": "4.9.5",
    "webpack": "5.88.2",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.15.1",
    "webpack-merge": "5.9.0"
  },
  "dependencies": {
    "alea": "^1.0.1",
    "excalibur": "0.28.1",
    "simplex-noise": "^4.0.1"
  }
}
